{
  "tests": [
    {
      "name": "run pytest",
      "run": "python -m pytest",
      "points": 5
    },
    {
      "name": "Testing the welcome message",
      "run": "python task3.py",
      "timeout": 20,
      "points": 5,
      "inputs": ["q"],
      "outputs":
      [
        {
          "expected": "Welcome to the address book!",
          "comparison": "included"
        }
      ]
    },
    {
      "name": "Testing Add a new contact",
      "run": "python task3.py",
      "timeout": 20,
      "points": 15,
      "inputs": ["a","Josh","23456789","p","q"],
      "outputs": [
        {
          "expected": "Josh",
          "comparison": "included",
          "caseInSensitive": true
        },
                {
          "expected": "23456789",
          "comparison": "included"
        }
      ]
    },
    {
      "name": "Testing List comprehension",
      "run": "cat task3.py",
      "extraCredit": true,
      "points": 15,
      "timeout": 20,
      "inputs": ["q"],
      "outputs": [
        {
           "expected":"[a-z]+\\s*=\\s*\\[[a-z]+\\s*for\\s*[a-z]\\s*in\\s*.+\\]",
          "comparison": "regex",
          "caseInsensitive": true

        }

      ]
    }
  ]
}
